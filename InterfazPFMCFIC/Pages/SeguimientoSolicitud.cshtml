@page
@using InterfazPFMCFIC.Models
@model SeguimientoSolicitudModel

@{
    Layout = null;
    ViewData["Title"] = "Movimientos de la Solicitud";
    var tipoAsignacion = Model.CatTipoConfirmacion.FirstOrDefault(x => x.CatTipoConfirmacionId == (int)TipoConfirmacion.NotificacionAsignacion)?.Descripcion;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Movimientos de la Solicitud</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { background: #f4f6fa; margin: 0; padding: 0; }
        .main-popup {
            margin: 2.5rem auto;
            max-width: 950px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.18);
            padding: 2.5rem 2rem;
        }
        h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 2rem;
            text-align: center;
        }
        .dataTables_wrapper .dataTables_filter input,
        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
            border: 1px solid #b5c6d0;
        }
        .table thead th { background: #f8fafc; }
        .details-control { cursor: pointer; color: #dc3545; text-decoration: underline; }
    </style>
</head>
<body>
    <div class="main-popup">
        <h2>Movimientos de la Solicitud</h2>
        <div class="table-responsive">
            <table id="tablaMovimientos" class="table table-striped table-sm display" style="width:100%; font-size:0.93rem;">
                <thead>
                    <tr>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Folio</th>
                        <th class="text-center">Archivo</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Movimientos.Count; i++)
                    {
                        var mov = Model.Movimientos[i];
                        var urlDescarga = Url.Page(
                            "/DescargarArchivo",
                            null,
                            new { archivoId = mov.ArchivoId, token = Model.Token },
                            Request.Scheme
                        );
                        bool esAsignacion = mov.Tipo == tipoAsignacion;
                        bool esAceptado = mov.Tipo == Model.CatTipoConfirmacion.FirstOrDefault(x => x.CatTipoConfirmacionId == (int)TipoConfirmacion.Aceptacion)?.Descripcion;
                        bool esAutoAceptacion = mov.Tipo == Model.CatTipoConfirmacion.FirstOrDefault(x => x.CatTipoConfirmacionId == (int)TipoConfirmacion.Autoaceptacion)?.Descripcion;
                        <tr data-idx="@i">
                            <td class="text-center">
                                @if (mov.Tipo == Model.TipoDescripcionRechazado || mov.Tipo == tipoAsignacion)
                                {
                                    <span class="details-control" data-idx="@i">@mov.Tipo</span>
                                }
                                else
                                {
                                    @mov.Tipo
                                }
                            </td>
                            <td class="text-center">@mov.Fecha?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@mov.Folio</td>
                            <td class="text-center">
                                @if (!(esAsignacion || esAceptado || esAutoAceptacion))
                                {
                                    if (mov.ArchivoId > 0 && !string.IsNullOrEmpty(mov.ArchivoNombre))
                                    {
                                        <a href="@urlDescarga" target="_blank" title="Descargar PDF">
                                            <img src="https://localhost:7292/img/file-pdf-solid.svg" alt="PDF" style="width:1em; vertical-align:middle;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="https://localhost:7292/img/file-broken-svg.svg" style="width:1em; vertical-align:middle; filter:grayscale(1);" />
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script>
        // Datos de detalles de rechazo y asignacion
        var detalles = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model.Movimientos.Select((mov, idx) => new {
                idx,
                isRechazo = mov.Tipo == Model.TipoDescripcionRechazado,
                isAsignacion = mov.Tipo == tipoAsignacion,
                tipoRechazo = mov.TipoRechazoTexto,
                motivoRechazo = mov.MotivoRechazoTexto,
                obsRechazo = mov.ObservacionesRechazo,
                nombreAnalista = mov.NombreAnalista,
                fechaAsignacion = mov.FechaAsignacion != DateTime.MinValue ? mov.FechaAsignacion.ToString("dd/MM/yyyy") : null
            }).ToList()
        ));

        function formatDetalle(idx) {
            var d = detalles[idx];
            if (!d) return '';
            if (d.isRechazo) {
                return `<div style="padding:1rem 2rem; background:#f8fafc;">
                    <strong>Tipo de Rechazo:</strong> ${d.tipoRechazo}<br />
                    <strong>Motivo:</strong> ${d.motivoRechazo}<br />
                    <strong>Observaciones:</strong> ${d.obsRechazo}
                </div>`;
            }
            if (d.isAsignacion) {
                return `<div style="padding:1rem 2rem; background:#f8fafc;">
                    <strong>Nombre del Analista:</strong> ${d.nombreAnalista}<br />
                    <strong>Fecha de Asignación:</strong> ${d.fechaAsignacion}
                </div>`;
            }
            return '';
        }

        $(function() {
          var table = $('#tablaMovimientos').DataTable({
            language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
            order: [],
            paging: true,
            searching: true
          });

          // Expandir/cerrar detalles
          $('#tablaMovimientos tbody').on('click', 'span.details-control', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            var idx = $(this).data('idx');
            if (row.child.isShown()) {
                row.child.hide(); tr.removeClass('shown');
            } else {
                row.child(formatDetalle(idx)).show(); tr.addClass('shown');
            }
          });
        });
    </script>
</body>
</html>
