@page
@model SeguimientoSolicitudModel
@{
    ViewData["OcultarMenu"] = true;
}


<h3>Seguimiento de Solicitud</h3>

<br />
@if (Model.Confirmaciones.Any())
{
    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Estatus</th>
                <th>Fecha</th>
                <th>Folio</th>
                <th>Archivo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Confirmaciones)
            {
                <tr>
                    <td>@item.Estatus</td>
                    <td>@item.Fecha?.ToString("dd/MM/yyyy")</td>
                    <td>@item.Folio</td>
                    <td style="text-align:center;">
                        @if (!string.IsNullOrEmpty(item.ArchivoNombre) && item.ArchivoId > 0)
                        {
                            <a asp-page-handler="DescargarArchivo"
                               asp-route-archivoId="@item.ArchivoId"
                               asp-route-ticks="@DateTime.UtcNow.Ticks"
                               target="_blank"
                               title="Descargar PDF"
                               style="text-decoration:none;">
                                <i class="fa-solid fa-file-pdf" style="color:#d32f2f; font-size:1.5em;"></i>
                               
                            </a>
                        }
                        else
                        {
                            <span style="color: #ccc;">
                                <i class="fa-solid fa-file-pdf"  style="font-size:1.5em;"></i>
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.TotalPaginas > 1)
    {
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.Pagina == 1 ? "disabled" : "")">
                    <a class="page-link" href="/SeguimientoSolicitud?ActoID=@Model.ActoID&Pagina=@(Model.Pagina - 1)">Anterior</a>
                </li>
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    <li class="page-item @(i == Model.Pagina ? "active" : "")">
                        <a class="page-link" href="/SeguimientoSolicitud?ActoID=@Model.ActoID&Pagina=@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Pagina == Model.TotalPaginas ? "disabled" : "")">
                    <a class="page-link" href="/SeguimientoSolicitud?ActoID=@Model.ActoID&Pagina=@(Model.Pagina + 1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <p>No hay confirmaciones de envío para este ActoID.</p>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
